<Window x:Class="ADBToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ADB Windows Toolkit" Height="450" Width="800">
    <Grid>
        <!-- Existing Buttons -->
        <Button Content="Reboot Bootloader" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780" Height="50" Margin="0,10,0,0" Click="RebootBootloader_Click"/>
        <Button Content="Reboot Recovery" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780" Height="50" Margin="0,70,0,0" Click="RebootRecovery_Click"/>
        <Button Content="Install APK" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780" Height="50" Margin="0,130,0,0" Click="InstallAPK_Click"/>
        <Button Content="Custom Command" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780" Height="50" Margin="0,190,0,0" Click="CustomCommand_Click"/>

        <!-- New Check Devices Button -->
        <Button Content="Check Devices" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780" Height="50" Margin="0,250,0,0" Click="CheckDevices_Click"/>

        <!-- Check Platform Tools Button -->
        <Button Content="Check Platform Tools" HorizontalAlignment="Center" VerticalAlignment="Top" Width="780" Height="50" Margin="0,310,0,0" Click="CheckPlatformTools_Click"/>
        <Label Content="ADB Easy Windows Toolkit 1.0
               Created By Zohan Haque" HorizontalAlignment="Center" Margin="0,383,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
